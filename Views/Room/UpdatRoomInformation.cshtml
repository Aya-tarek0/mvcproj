@model RoomUpdateViewModel

@{
    ViewData["Title"] = "UpdatRoomInformation";
    SelectList RoomTypeOptoin = new SelectList(Model.RoomTypeList, "RoomTypeId", "Name");
}


<div class="container mt-4">
    <h2 class="text-center mb-4">Update Room Information</h2>


    <form asp-action="SaveUpdateRoom" asp-controller="Room" method="post">
        <input type="hidden" name="id" value="@Model.RoomID" />
        <div class="mb-3">
            <label asp-for="RoomID"> </label>
            <input class="form form-control" asp-for="RoomID" />
        </div>

        <div class="mb-3">
            <label asp-for="Image"> </label>
            <input class="form form-control" asp-for="Image" />
        </div>

        <div class="mb-3">
            <label asp-for="Status"> </label>
            <input class="form form-control" asp-for="Status" />
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile"> </label>
            <input class="form form-control" asp-for="ImageFile" />
        </div>

      
        <div class="mb-3">
            <label asp-for="HotelName" ></label>
            <input class="form form-control" asp-for="HotelName" readonly />
        </div>

        <div class="mb-3">
            <label asp-for="TypeID"></label>
            <select class="form form-control" asp-for="TypeID" asp-items="RoomTypeOptoin">
                <option value=""> -- Select Room Type --</option>
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success">
                Save Updates
            </button>
        </div>


    </form>

</div>
<a asp-action="Index" asp-controller="Room" class="btn btn-primary">
    back to list Of Rooms 
</a>